
public class MainComponent {
	public static void main(String[] args) {
		Robot rob = new Robot();
		
//		rob.hide();
//		rob.show();
		
		boolean b = false;
		for(int i = 0; i < 10000; i++)
		{
			if(b)
			{
				rob.hide();
			}
			else
			{
				rob.show();
			}
			b = !b;
			try {
				Thread.sleep(100);
			} catch (InterruptedException e) {
				// TODO Auto-generated catch block
				e.printStackTrace();
			}
		}
		
	}
}
