
public class MainComponent {
	public static void main(String[] args) {
		Robot rob = new Robot();
		rob.penDown();
		rob.setSpeed(10);
		rob.setPenSize(10);
		rob.setPenColor(255, 0, 255);
		rob.turn(-40);
		rob.move(500);
		rob.turn(-90);
		rob.move(200);
		
		Robot t = new Robot();
		t.penDown();
		t.setSpeed(5);
		t.setPenColor(100, 100, 255);
		t.move(100);
		t.turn(120);
		t.move(400);
		
		
	}
}
