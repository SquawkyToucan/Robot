import java.awt.Color;
import java.awt.Font;
import java.awt.Graphics;

public class PenShapeButton extends DrawButton {
	
	private int penSize;
	
	Font font1;
	Font font2;
	
	DrawGrid dGrid;
	
	public PenShapeButton(int x, int y, int w, int h, DrawGrid dg)
	{
		xPos = x;
		yPos = y;
		width = w;
		height = h;
		dGrid = dg;
		
		penSize = 3;
		
		font1 = new Font("Arial", Font.BOLD, 34);
		font2 = new Font("Arial", Font.BOLD, 12);
	}
	
	public void draw(Graphics g)
	{
		g.setColor(new Color(220, 220, 255));
		g.fillRect(xPos, yPos, width, height);
		g.setColor(Color.BLACK);
		g.drawRect(xPos, yPos, width, height);
		g.drawRect(xPos + 1, yPos + 1, width - 2, height - 2);
		g.drawRect(xPos + 2, yPos + 2, width - 4, height - 4);
		g.setFont(font1);
		g.drawString(Integer.toString(penSize), xPos + 17, yPos + 35);
		g.setFont(font2);
		g.drawString("PEN SIZE", xPos, yPos);
		
	}
	
	@Override
	public void leftMouseClicked(int x, int y) {
		penSize++;
		
		if(penSize >= 8)
		{
			penSize = 1;
		}
		
		dGrid.setPenSize(penSize);
	}

}
